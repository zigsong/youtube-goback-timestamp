{
  "manifest_version": 3,
  "name": "Hook Timeline",
  "description": "Hook timeline comment you've clicked",
  "version": "0.0.1",
  "background": {
    "service_worker": "./scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["./scripts/main.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["tabs"],
  "icons": {
    "128": "assets/hook-timestamp-128.png"
  }
}
